<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="VocalLink_L00152171.Views.SingerEditPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:VocalLink_L00152171.ViewModels"
    Title="SingerEditPage">

    <ContentPage.BindingContext>
        <vm:SingerEditViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label
                FontSize="24"
                HorizontalOptions="Center"
                Text="Edit Your Profile" />

            <Entry Placeholder="Display Name" Text="{Binding Name}" />

            <Picker
                Title="Select Genre"
                ItemsSource="{Binding Genres}"
                SelectedItem="{Binding Genre}" />

            <Entry Placeholder="Location" Text="{Binding Location}" />

            <Editor
                AutoSize="TextChanges"
                Placeholder="Tell us about yourself..."
                Text="{Binding AboutMe}" />

            <HorizontalStackLayout Spacing="10">
                <Button
                    BackgroundColor="Green"
                    Command="{Binding SaveCommand}"
                    Text="Save"
                    TextColor="White" />
                <Button
                    BackgroundColor="Gray"
                    Command="{Binding CancelCommand}"
                    Text="Cancel"
                    TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>