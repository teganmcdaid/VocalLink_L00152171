<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="VocalLink_L00152171.Views.DeveloperSettingsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:VocalLink_L00152171.ViewModels"
    Title=""
    x:DataType="vm:DeveloperSettingsViewModel"
    BackgroundColor="#E6F0F7">

    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        WidthRequest="600">
        <Label FontAttributes="Bold" Text="Enter SendGrid API Key:" />
        <Entry
            BackgroundColor="White"
            IsPassword="True"
            Placeholder="API key"
            Text="{Binding ApiKey}" />
        <Button Command="{Binding SaveApiKeyCommand}" Text="Save API Key" />
    </VerticalStackLayout>
</ContentPage>