<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:VocalLink_L00152171.ViewModels"  
             x:Class="VocalLink_L00152171.Views.HomePage"
             Title="HomePage">
    <ContentPage.BindingContext>
        <viewmodels:HomePageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">

            <Label Text="Available Singers"
                   FontSize="22"
                   HorizontalOptions="Center"
                   IsVisible="{Binding IsSinger, Converter={StaticResource InverseBoolConverter}}" />

            <CollectionView ItemsSource="{Binding Singers}"
                            IsVisible="{Binding IsSinger, Converter={StaticResource InverseBoolConverter}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="5" BorderColor="Gray" CornerRadius="10">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="18" />
                                <Label Text="{Binding Genre}" FontSize="14" />
                                <Label Text="{Binding Location}" FontSize="14" />
                                <Button Text="View Profile" 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewProfileCommand}"
                                        CommandParameter="{Binding}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
