<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="VocalLink_L00152171.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:VocalLink_L00152171.ViewModels"
    Title="HomePage">
    <ContentPage.BindingContext>
        <viewmodels:HomePageViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="10">
            <Label
                x:Name="welcomeLabel"
                FontAttributes="Bold"
                FontSize="20"
                HorizontalOptions="Center"
                TextColor="DarkBlue" />

            <Label
                FontSize="22"
                HorizontalOptions="Center"
                IsVisible="{Binding IsSinger, Converter={StaticResource InverseBoolConverter}}"
                Text="Available Singers" />

            <CollectionView IsVisible="{Binding IsSinger, Converter={StaticResource InverseBoolConverter}}" ItemsSource="{Binding Singers}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="5"
                            Padding="10"
                            BorderColor="Gray"
                            CornerRadius="10">
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    Text="{Binding Name}" />
                                <Label FontSize="14" Text="{Binding Genre}" />
                                <Label FontSize="14" Text="{Binding Location}" />
                                <Button
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewProfileCommand}"
                                    CommandParameter="{Binding}"
                                    Text="View Profile" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
